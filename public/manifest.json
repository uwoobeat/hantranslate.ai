{
  "manifest_version": 3,
  "name": "HanTranslate.ai",
  "description": "Chrome Built-in AI를 활용한 한국어 번역",
  "version": "0.2.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
